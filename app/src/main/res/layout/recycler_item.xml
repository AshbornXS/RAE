<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:backgroundTint="@color/recycler"
    android:elevation="8dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_cloud_upload_24"
            app:shapeAppearanceOverlay="@style/roundedImageView" />

        <TextView
            android:id="@+id/recTitulo"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/recImage"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/teal_200"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recData"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recTitulo"
            android:gravity="center_horizontal"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/recAviso"
            android:layout_width="140dp"
            android:layout_height="15dp"
            android:layout_below="@id/recTitulo"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/recImage"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/text"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>