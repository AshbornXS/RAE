<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/recycler"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/recImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/grey"
                android:padding="8dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/roundedImageView" />

            <TextView
                android:id="@+id/recTitulo"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/recImage"
                android:background="@color/grey"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/teal_200"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/recData"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/recTitulo"
                android:background="@color/grey"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/recAviso"
                android:layout_width="140dp"
                android:layout_height="15dp"
                android:layout_below="@id/recTitulo"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/recImage"
                android:background="@color/grey"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text"
                android:textSize="12sp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/recycler"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/recImage1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/grey"
                android:padding="8dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/roundedImageView" />

            <TextView
                android:id="@+id/recTitulo1"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/recImage1"
                android:background="@color/grey"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/teal_200"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/recData1"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/recTitulo1"
                android:background="@color/grey"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/recAviso1"
                android:layout_width="140dp"
                android:layout_height="15dp"
                android:layout_below="@id/recTitulo1"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/recImage1"
                android:background="@color/grey"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text"
                android:textSize="12sp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/recycler"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/recImage2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/grey"
                android:padding="8dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/roundedImageView" />

            <TextView
                android:id="@+id/recTitulo2"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/recImage2"
                android:background="@color/grey"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/teal_200"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/recData2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/recTitulo2"
                android:background="@color/grey"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/recAviso2"
                android:layout_width="140dp"
                android:layout_height="15dp"
                android:layout_below="@id/recTitulo2"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/recImage2"
                android:background="@color/grey"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text"
                android:textSize="12sp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>